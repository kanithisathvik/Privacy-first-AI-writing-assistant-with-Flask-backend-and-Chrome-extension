# ContextGuard Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Firebase Configuration (Get from Firebase Console)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (Download JSON from Firebase Console)
FIREBASE_ADMIN_CREDENTIALS=firebase-adminsdk.json

# Google Generative AI (Optional - for enhanced AI features)
GOOGLE_API_KEY=your-google-api-key

# Application Settings
PORT=5000
HOST=0.0.0.0
DEBUG=True

# CORS Settings (for Chrome Extension)
ALLOWED_ORIGINS=chrome-extension://,http://localhost:3000,http://localhost:5000
